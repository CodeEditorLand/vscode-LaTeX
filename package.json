{
	"name": "latex",
	"displayName": "[DEPRECATED] LaTeX Language Support",
	"description": "[DEPRECATED] LaTeX - colorizer, grammar and snippets.",
	"main": "./out/extension",
	"scripts": {
		"compile": "tsc -watch -p ./"
	},
	"contributes": {
		"configuration": {
			"properties": {
				"latex.StopAsking": {
					"default": false,
					"description": "LaTeX: Don't ask again for deprication warning",
					"type": "boolean"
				}
			},
			"title": "LaTeX options"
		},
		"grammars": [
			{
				"language": "latex",
				"path": "./syntaxes/latex.tmLanguage",
				"scopeName": "text.tex.latex"
			},
			{
				"language": "tex",
				"path": "./syntaxes/tex.tmLanguage",
				"scopeName": "text.tex"
			}
		],
		"languages": [
			{
				"aliases": [
					"LaTeX",
					"latex"
				],
				"configuration": "./latex.configuration.json",
				"extensions": [
					".tex"
				],
				"id": "latex"
			},
			{
				"aliases": [
					"TeX",
					"tex"
				],
				"configuration": "./latex.configuration.json",
				"extensions": [
					".sty",
					".cls",
					".bbx",
					".cbx"
				],
				"id": "tex"
			}
		]
	},
	"activationEvents": [
		"*"
	],
	"dependencies": {
		"open": "10.1.0"
	},
	"devDependencies": {
		"@types/node": "22.10.5"
	},
	"icon": "images/iconLaTeX.png"
}
